# Production Environment Configuration Template
# Copy this file to .env and update with your production values

# Application
APP_NAME="ACEF"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_URL=https://www.acef-ngo.org
ASSET_URL="${APP_URL}"

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Encryption
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=sqlite
# For MySQL (recommended for production):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=your_database_name
# DB_USERNAME=your_database_user
# DB_PASSWORD=your_database_password

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database

# Redis (if using)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mail.acef-ngo.org
MAIL_PORT=465
MAIL_USERNAME=info@acef-ngo.org
MAIL_PASSWORD=ACEFfoundation2021
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="info@acef-ngo.org"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# PayPal Configuration
PAYPAL_MODE=live  # live or sandbox
PAYPAL_CLIENT_ID=your_live_paypal_client_id
PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret

# M-Pesa Configuration
MPESA_ENVIRONMENT=production  # production or sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_business_shortcode
MPESA_PASSKEY=your_mpesa_passkey
MPESA_INITIATOR_NAME=your_initiator_name
MPESA_INITIATOR_PASSWORD=your_initiator_password

# Google Translate API (if using)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Security Headers (optional overrides)
# CSP_ENABLED=true
# HSTS_ENABLED=true
